{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "outDir": "../Scripts/",
    "sourceMap": true,
    "target": "es6",
    "moduleResolution": "node",
    "lib": [
      "es2017",
      "DOM"
    ],
    "paths": {
      "PureUtils": ["src/utils/pureUtils"],
      "Typings": ["src/typings/"],
      "CommonTypings": ["src/typings/common"],
      "Utils": ["src/utils"],
      "Modules": ["src/modules"],
      "Extensions": ["src/extensions"]
    }
  }
}