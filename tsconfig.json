{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "outDir": "../Scripts/",
    "sourceMap": true,
    "target": "es5",
    "moduleResolution": "node",
    "lib": [
      "es2017"
    ],
    "paths": {
      "PureUtils": ["src/helpers/pureUtils"],
      "Typings": ["src/typings/"],
      "Helpers": ["src/helpers/"],
    }
  }
}