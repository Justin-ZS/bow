{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": true,
    "module": "CommonJS",
    "sourceMap": true,
    "target": "es6",
    "moduleResolution": "node",
    "lib": [
      "es2017",
      "DOM"
    ],
    "paths": {
      "PureUtils": ["src/utils/pureUtils"],
      "Typings": ["src/typings/"],
      "CommonTypings": ["src/typings/common"],
      "CommonUtils": ["src/utils"], // https://github.com/facebook/jest/issues/10959
      "Modules": ["src/modules"],
      "Extensions": ["src/extensions"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}